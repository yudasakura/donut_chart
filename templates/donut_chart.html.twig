<svg class="circle-chart" viewbox="0 0 33.83098862 33.83098862" width="95%" height="95%" xmlns="http://www.w3.org/2000/svg">
  <circle class="circle-chart__background" stroke="{{ value.secondary_color  }}" stroke-width="{{ value.secondary_width }}" fill="none" cx="16.91549431" cy="16.91549431" r="14" />
  <circle class="circle-chart__circle" stroke="{{ value.main_color }}" stroke-width="{{ value.main_width }}" stroke-dasharray="{{ value.number/100*88 }},88" fill="none" cx="16.91549431" cy="16.91549431" r="14" />
  <circle class="circle-chart__background" stroke="{{ value.main_color }}" stroke-width="0.2" fill="none" cx="16.91549431" cy="16.91549431" r="10.75" />
  <g class="circle-chart__info">
    <text class="circle-chart__percent" x="17" y="17" alignment-baseline="central" text-anchor="middle" font-size="7px" font-weight="bold" fill="{{ value.text_color }}">{{ value.number }}%</text>
  </g>
</svg>
